<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/imPosterItemFullPopular"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:background="@drawable/home_item_recycler_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRatingItemFullPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/home_item_recycler_background"
        android:backgroundTint="@color/red_main"
        android:padding="5dp"
        android:text="@string/sample_rating"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/imPosterItemFullPopular"
        app:layout_constraintTop_toTopOf="@id/imPosterItemFullPopular" />

    <TextView
        android:id="@+id/tvRankAndTitleItemFullPopular"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/rank_and_title_item_full_popular"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imPosterItemFullPopular" />

</androidx.constraintlayout.widget.ConstraintLayout>
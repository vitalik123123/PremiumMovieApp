<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imListItemWatchlistPoster"
        android:layout_width="160dp"
        android:layout_height="260dp"
        android:background="@drawable/home_item_recycler_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvListItemWatchlistRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/home_item_recycler_background"
        android:backgroundTint="@color/red_main"
        android:padding="7dp"
        android:text="@string/sample_rating"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/imListItemWatchlistPoster"
        app:layout_constraintTop_toTopOf="@id/imListItemWatchlistPoster" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvListItemWatchlistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="120dp"
        android:maxLines="2"
        android:padding="5dp"
        android:text="@string/sample_title_movie_home"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivListItemWatchlistRemove"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imListItemWatchlistPoster" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivListItemWatchlistRemove"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ic_remove_circle_outline"
        android:backgroundTint="@color/red_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imListItemWatchlistPoster" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/imHomeItemPoster"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:background="@drawable/home_item_recycler_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHomeItemRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/home_item_recycler_background"
        android:backgroundTint="@color/red_main"
        android:padding="5dp"
        android:text="@string/sample_rating"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/imHomeItemPoster"
        app:layout_constraintTop_toTopOf="@id/imHomeItemPoster" />

</androidx.constraintlayout.widget.ConstraintLayout>